{
  "name": "tigertix",
  "version": "1.0.0",
  "description": "TigerTix Admin Service - Event Management Microservice",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "setup-env": "node setup-envs.js",
    "start:front": "cd frontend && npm start",
    "start:client": "cd Backend/client-service && node server.js",
    "start:llm": "cd Backend/llm-service && nodellmserver.js",
    "start:login": "cd Backend/login-service && node loginServer.js",
    "start:admin": "cd Backend/admin-service && node server.js",
    "start": "concurrently \"npm run start:client\" \"npm run start:llm\" \"npm run start:login\" \"npm run start:front\"",
    "dev": "nodemon server.js",

    "test:frontend": "cd frontend && npm test -- --watchAll=false",
    "test:admin": "npx jest Backend/admin-service/tests --runInBand",
    "test:client": "npx jest Backend/client-service/tests --runInBand",
    "test:llm": "npx jest Backend/llm-service/tests --runInBand",
    "test:login": "npx jest Backend/login-service/tests --runInBand",
    "test": "npm run test:frontend && npm run test:admin && npm run test:client && npm run test:llm && npm run test:login"
  },
  "keywords": [
    "ticketing",
    "microservices",
    "events"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/genai": "^1.27.0",
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.13.1",
    "bcrypt": "^6.0.0",
    "chromedriver": "^142.0.0",
    "concurrently": "^9.2.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.15.2",
    "openai": "^6.7.0",
    "selenium-webdriver": "^4.38.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}
